# Database
DB_DIALECT=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=cluck_metrics
DB_USER=root
DB_PASS=

# Server
PORT=3001

# Auth
JWT_SECRET=change_me_in_production

# Gemini AI
GEMINI_API_KEY=your_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# Briq SMS
# Base URL for Briq SMS API (confirm with provider docs)
BRIQ_BASE_URL=https://api.briqsms.com
# Your Briq API key/secret
BRIQ_API_KEY=your_briq_api_key_here
# Optional: Sender ID or shortcode configured in Briq
BRIQ_SENDER_ID=ChickTrack

# Optional: local testing flags
# If set to 1, backend will NOT call Briq and will log instead
SMS_FAKE=1
# Timeout for SMS provider requests (ms)
SMS_TIMEOUT_MS=10000

# Africa's Talking (alternate SMS provider)
# Set these to use Africa's Talking instead of Briq
AT_API_KEY=your_at_api_key_here
AT_USERNAME=sandbox
# Optional: Sender ID (omit in sandbox)
AT_SENDER_ID=
